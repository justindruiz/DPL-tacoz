<h1>Edit Location Item</h1>
<%= nested_form_for [:admin, @location] do |f| %>
  <div class="form-group">
  <%= f.label :street_address %>
  <%= f.text_field :street_address %>
  </div>
  <div class="form-group">
  <%= f.label :street_address2 %>
  <%= f.text_field :street_address2 %>
  </div>
  <div class="form-group">
  <%= f.label :city %>
  <%= f.text_field :city %>
  </div>
  <div class="form-group">
  <%= f.label :state %>
  <%= f.text_field :state %>
  </div>
  <div class="form-group">
  <%= f.label :zip %>
  <%= f.text_field :zip %>
  </div>

  <p><%= f.link_to_add('Add Employee', :employees)%></p>
  <%= f.fields_for(:employees) do |employee_form| %>
  <div class="form-group">
    <%= employee_form.text_field(:name, placeholder: "Name")%>
  </div>
  <div class="form-group">
    <%= employee_form.text_field(:badge_number, placeholder: "Badge number")%>
  </div>
  <p><%= f.link_to_remove ('Remove Employee')%></p>
  <% end %>
  <div class="form-group">
  <%= f.submit %>
  </div>
<% end %>
