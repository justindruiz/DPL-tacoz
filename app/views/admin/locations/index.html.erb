<h1>Admin/Locations Index</h1>
<% @locations.in_groups_of(4, false) do |group| %>
  <div class="row">
    <% group.each do |location| %>
      <div class="col-sm-3">
        <div class="panel">
          <div class="panel-body">
            <h3><%= location.address %></h3>
          </div>
          <div class="panel-footer text-center">
          <%= link_to('See More', admin_location_path(location), class: 'btn btn-success') %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
<% paginate(@locations) %>
