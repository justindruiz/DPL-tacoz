<h1>Edit Menu Item</h1>
<%= form_for [:admin, @menu_item] do |f| %>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name %>
  </div>
  <div class="form-group">
  <%= f.label :price %>
  <%= f.text_field :price %>
  </div>
  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description %>
  </div>
  <div class="form-group">
  <%= f.label :vegetarian %>
  <%= f.check_box :vegetarian %>
  </div>
  <div class="form-group">
  <%= f.label :picture %>
  <%= f.file_field :picture %>
  </div>
  <div class="form-group">
  <%= f.submit %>
  </div>
<% end %>
